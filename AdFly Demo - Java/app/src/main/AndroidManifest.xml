<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.adfly.sdk.demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.AdflySdk">

        <!--Mintegral 使用了apache http-->
        <uses-library android:name="org.apache.http.legacy" android:required="false" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".rewardedvideo.RewardedVideoActivity"
            android:label="RewardedVideo"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>
        <activity
            android:name=".interactivead.InteractiveAdActivity"
            android:label="InteractiveAd"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

    </application>

</manifest>